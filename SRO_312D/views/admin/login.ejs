<%- include('header') %>

<section class="admin-login-section">
    <div class="admin-login-container">
        <div class="admin-login-card">
            <div class="admin-login-header">
                <h2><i class="fas fa-lock"></i> Admin Portal</h2>
                <p>Secure login for SRO 312D administrators</p>
            </div>
            
            <% if(error) { %>
                <div class="alert alert-error">
                    <%= error %>
                </div>
            <% } %>
            
            <form action="/admin/login" method="POST" class="admin-login-form">
                <div class="form-group">
                    <label for="username">Admin Username</label>
                    <div class="input-icon">
                        <i class="fas fa-user"></i>
                        <input type="text" id="username" name="username" placeholder="Enter admin username" required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="input-icon">
                        <i class="fas fa-key"></i>
                        <input type="password" id="password" name="password" placeholder="Enter password" required>
                    </div>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Access Admin Portal</button>
                </div>
            </form>
            
            <div class="admin-login-note">
                <p>Note: This portal is restricted to authorized SRO 312D administrators only.</p>
            </div>
        </div>
    </div>
</section>

<%- include('footer') %> 